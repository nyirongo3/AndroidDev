<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/lavendor"
    tools:context=".SetupActivity">

    <!-- Nested Scroll View with ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">

        <!-- Image at the Top -->
        <ImageView
            android:id="@+id/topImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/setupp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <!-- Title Text -->
        <TextView
            android:id="@+id/setupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting Up Android Studio"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topImage" />

        <!-- Paragraph 1 -->
        <TextView
            android:id="@+id/paragraph1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="To start programming in Android, you need to set up Android Studio on your computer. Android Studio is the official Integrated Development Environment (IDE) for Android app development."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setupTitle" />

        <!-- Paragraph 2 -->
        <TextView
            android:id="@+id/paragraph2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="First, download and install Android Studio from the official website. Make sure to have the latest version of Java Development Kit (JDK) installed on your machine as well."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paragraph1" />

        <!-- Paragraph 3 -->
        <TextView
            android:id="@+id/paragraph3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Once Android Studio is installed, open it and configure the IDE by installing the necessary SDKs (Software Development Kits) that are required for building Android apps."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paragraph2" />

        <!-- Paragraph 4 -->
        <TextView
            android:id="@+id/paragraph4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Next, set up an emulator or connect an Android device to your computer. This will allow you to run and test your app directly on your computer or on a real device."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paragraph3" />

        <!-- Paragraph 5 -->
        <TextView
            android:id="@+id/paragraph5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="With everything set up, you are ready to start creating Android apps. The first step is to create a new project in Android Studio, choose a template, and begin coding your app."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paragraph4" />

        <!-- Button for interaction -->
        <Button
            android:id="@+id/getStartedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textColor="@android:color/white"
            android:background="@color/design_default_color_primary"
            android:layout_marginTop="32dp"
            android:onClick="onGetStartedClicked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paragraph5"
            tools:ignore="OnClick" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
